<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_menu"
    tools:context=".SpinWheelActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="#4A3A8A"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/ivPlayerIcon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="12dp"/>
            <TextView
                android:id="@+id/tvPlayerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="\@abraham"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/ivPlayerIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/tvVs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VS"
                android:textColor="#FFC107"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/tvMachineName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="\@CPU_Bot"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@id/ivMachineIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:id="@+id/ivMachineIcon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="12dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/ivRuletaBase"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:src="@drawable/ruleta_base"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar" />

    <ImageView
        android:id="@+id/ivRuletaIndicador"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/btn_indicador"
        app:layout_constraintEnd_toEndOf="@+id/ivRuletaBase"
        app:layout_constraintStart_toStartOf="@+id/ivRuletaBase"
        app:layout_constraintTop_toTopOf="@+id/ivRuletaBase"
        android:layout_marginTop="30dp"/> <ImageView
    android:id="@+id/btnGirar"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:src="@drawable/btn_vip"
    android:clickable="true"
    android:focusable="true"
    app:layout_constraintBottom_toBottomOf="@+id/ivRuletaBase"
    app:layout_constraintEnd_toEndOf="@+id/ivRuletaBase"
    app:layout_constraintStart_toStartOf="@+id/ivRuletaBase"
    app:layout_constraintTop_toTopOf="@+id/ivRuletaBase" />

</androidx.constraintlayout.widget.ConstraintLayout>