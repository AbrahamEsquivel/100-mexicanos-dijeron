<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#F44336"
                android:endColor="#B71C1C"
                android:angle="45"/>
            <corners android:radius="20dp"/>
            <stroke
                android:width="3dp"
                android:color="#FF8A80"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#C62828"
                android:endColor="#7B1FA2"
                android:angle="45"/>
            <corners android:radius="20dp"/>
            <stroke
                android:width="3dp"
                android:color="#FF5252"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</selector>